doctype html
head
  meta(charset='UTF-8')
  title Список клиентов
  link(rel='stylesheet' href='main.css')
  link(href='https://fonts.googleapis.com/css?family=Amaranth|Philosopher&display=swap' rel='stylesheet')
  script(src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.0.min.js')
  script(type='text/javascript' src='main.js')
body
  .head
    include includes/header
  .body
    .wrap
      h2 Клиенты
      include includes/messages
      -if(!customers[0])
        div Ничего не найдено
      -else
        table
          thead
            tr
              td id
              td Имя
              td Адрес
              td Телефон
              td Общая сумма
              td Скидка
              td 
          tbody
            -customers.forEach(function(e){
              tr
                td #{e.id}
                td #{e.name}
                td #{e.address}
                td #{e.phone}
                td #{e.sum}
                td #{e.disc}
                td Изменить
            -})

  #over.hide
  .form.hide
    form#changeCust(action='/custList/changeCust' method='post')
      .text Измените данные клиента
      input(type='number' name='id' placeholder='id' required='')
      input(type='text' name='name' placeholder='Имя' required='')
      input(type='text' name='address' placeholder='Адрес' required='')
      input(type='tel' name='phone' placeholder='Телефон' required='')
      input(type='number' name='sum' placeholder='Общая сумма' )
      input(type='number' name='disc' placeholder='??')
      input(type='submit' value='Изменить')
