doctype html
head
  meta(charset='UTF-8')
  title #{username}
  link(rel='stylesheet' href='main.css')
  link(href='https://fonts.googleapis.com/css?family=Amaranth|Philosopher&display=swap' rel='stylesheet')
  script(src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.0.min.js')
  script(type='text/javascript' src='main.js')
body
  include includes/header
  .body
    .wrap
      h2 Возможности
      include includes/messages
      div
        ul
          a(href='/goodList')
            li#goodList Список товаров
          li#addCust Создать нового клиента
          a(href='/custList')
            li#custList Список клиентов
          a(href='/addOrder')
            li#addOrder Создать заказ
          a(href='/orderList')
            li#orderList Просмотреть заказы
  #over.hide
  .form.hide
    form#addC(action='/profile/addCust' method='post')
      .text Введите данные клиента
      input(type='text' name='name' placeholder='Имя' required='')
      input(type='text' name='address' placeholder='Адрес' required='')
      input(type='tel' name='phone' placeholder='Телефон' required='')
      input(type='number' name='disc' placeholder='Скидка' required='')
      input(type='submit' value='Добавить')
